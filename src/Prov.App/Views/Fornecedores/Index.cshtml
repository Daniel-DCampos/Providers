@model IEnumerable<Prov.App.DTO.FornecedorDTO>
@using Prov.App.Extensions

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Cadastrar Fornecedor</a>
</p>
  <vc:summary></vc:summary>
<table class="table table-hover">
    <thead>
        <tr class="thead-dark">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoFornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atvo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormataDocumento(item.TipoFornecedor, item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoFornecedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Atvo)
                </td>
                <td class="text-end">
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"/></a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"/></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"/></a>
                </td>
            </tr>
        }
    </tbody>
</table>
