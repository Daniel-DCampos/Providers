@model IEnumerable<Prov.App.DTO.ProdutoDTO>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<hr />

<p>
    <a class="btn btn-info" asp-action="Create">Cadatrar Produto</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/img/@item.imagem" alt="@item.imagem" style="width:100px;height:70px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td class="text-end">
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.id"><span class="fa fa-search" /></a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.id"><span class="fa fa-edit" /></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id"><span class="fa fa-trash" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
